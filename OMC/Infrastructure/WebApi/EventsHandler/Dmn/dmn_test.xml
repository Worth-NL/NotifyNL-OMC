<?xml version="1.0" encoding="UTF-8"?>
<definitions
    xmlns="http://www.omg.org/spec/DMN/20151101/dmn.xsd"
    id="expandedExample"
    name="Expanded Example"
    namespace="http://example.com">

    <decision id="scenarioPicker" name="Scenario Picker">
        <decisionTable hitPolicy="FIRST">
            <!-- Define inputs -->
            <input id="Action" label="Action">
                <inputExpression id="Action" typeRef="string">
                    <text>Actie</text>
                </inputExpression>
            </input>
            <input id="Channel" label="Channel">
                <inputExpression id="inputExpression2" typeRef="string">
                    <text>Channel</text>
                </inputExpression>
            </input>
            <input id="Resource" label="Resource">
                <inputExpression id="inputExpression3" typeRef="string">
                    <text>Resource</text>
                </inputExpression>
            </input>

            <!-- Define output -->
            <output id="output1" name="Scenario" typeRef="string" />

            <!-- Define rules -->
            <!-- Case Scenario -->
            <rule>
                <inputEntry>
                    <text>"Create"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Cases"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Status"</text>
                </inputEntry>
                <outputEntry>
                    <text>"CaseScenario"</text>
                </outputEntry>
            </rule>

            <!-- Object Scenario -->
            <rule>
                <inputEntry>
                    <text>"Create"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Objects"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Object"</text>
                </inputEntry>
                <outputEntry>
                    <text>"ObjectScenario"</text>
                </outputEntry>
            </rule>

            <!-- Decision Scenario -->
            <rule>
                <inputEntry>
                    <text>"Create"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Decisions"</text>
                </inputEntry>
                <inputEntry>
                    <text>"Decision"</text>
                </inputEntry>
                <outputEntry>
                    <text>"DecisionScenario"</text>
                </outputEntry>
            </rule>

            <!-- Default fallback -->
            <rule>
                <inputEntry>
                    <text>-</text>
                </inputEntry>
                <inputEntry>
                    <text>-</text>
                </inputEntry>
                <inputEntry>
                    <text>-</text>
                </inputEntry>
                <outputEntry>
                    <text>"NotImplementedScenario"</text>
                </outputEntry>
            </rule>
        </decisionTable>
    </decision>
</definitions>
